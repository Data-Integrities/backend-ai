# Proxmox AI Control Hub Configuration

# Server Ports
PORT=3000
WS_PORT=3001

# Anthropic API Key (required for AI processing)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Security
JWT_SECRET=change-this-to-a-random-secret
REQUIRE_AUTH=false

# Allowed agents (comma-separated agent IDs)
# Leave empty to allow all agents
ALLOWED_AGENTS=

# Logging
LOG_LEVEL=info

# Command Limits
MAX_CONCURRENT_COMMANDS=10
COMMAND_TIMEOUT=60000

# Optional: Proxmox servers for infrastructure sync
PVE1_HOST=pve1.example.com
PVE1_USERNAME=root@pam
PVE1_PASSWORD=your_password
PVE1_PORT=8006

PVE2_HOST=pve2.example.com
PVE2_USERNAME=root@pam
PVE2_PASSWORD=your_password
PVE2_PORT=8006

PVE3_HOST=pve3.example.com
PVE3_USERNAME=root@pam
PVE3_PASSWORD=your_password
PVE3_PORT=8006